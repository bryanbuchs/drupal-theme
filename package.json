{
  "name": "drupal-theme",
  "version": "1.1.0",
  "description": "component-driven development boilerplate for Drupal themes",
  "author": "bryan@kapowinc.com",
  "type": "module",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "vite build && node ./utils/post-build.js",
    "cleanup": "node ./utils/post-build.js",
    "start": "vite build --watch & chokidar 'dist/**/*' -c 'node post-build.js' -s > /dev/null 2>&1",
    "storybook": "storybook dev --disable-telemetry",
    "build-storybook": "storybook build --test"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@storybook/addon-a11y": "^8.6.12",
    "@storybook/addon-backgrounds": "^8.6.12",
    "@storybook/addon-controls": "^8.6.12",
    "@storybook/html": "^8.6.12",
    "@storybook/html-vite": "^8.6.12",
    "browserslist": "^4.24.4",
    "browserslist-to-esbuild": "^2.1.1",
    "chokidar-cli": "^3.0.0",
    "drupal-attribute": "^1.1.0",
    "less": "^4.3.0",
    "postcss": "^8.5.3",
    "postcss-inline-svg": "github:bryanbuchs/postcss-inline-svg",
    "postcss-preset-env": "^10.1.6",
    "storybook": "^8.4.7",
    "tinyglobby": "^0.2.13",
    "title-case": "^4.3.2",
    "vite": "^6.3.5",
    "vite-plugin-browser-sync": "^4.0.0",
    "vite-plugin-twig-drupal": "^1.6.0"
  },
  "optionalDependencies": {
    "@esbuild/darwin-arm64": "^0.25.0"
  }
}
