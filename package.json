{
  "name": "drupal-theme",
  "version": "1.3.0",
  "description": "component-driven development boilerplate for Drupal themes",
  "author": "bryan@kapowinc.com",
  "type": "module",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "vite build --mode 'production' --minify",
    "start": "vite build --mode 'development' --sourcemap --watch",
    "storybook": "storybook dev --disable-telemetry --port 55555",
    "build-storybook": "storybook build --test",
    "build-tokens": "style-dictionary build --config ./style-dictionary.config.js",
    "prepare": "husky",
    "lint": "eslint . --ext .js,.twig",
    "lint:fix": "eslint . --ext .js,.twig --fix"
  },
  "devDependencies": {
    "@bundled-es-modules/memfs": "^4.17.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/html-vite": "^10.1.11",
    "browserslist": "^4.25.1",
    "browserslist-to-esbuild": "^2.1.1",
    "drupal-attribute": "^1.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-storybook": "^10.0.8",
    "husky": "^9.1.7",
    "less": "^4.4.2",
    "postcss": "^8.5.6",
    "postcss-inline-svg": "github:bryanbuchs/postcss-inline-svg",
    "postcss-preset-env": "^10.6.0",
    "postcss-utopia": "^1.1.0",
    "storybook": "^10.1.11",
    "style-dictionary": "^5.0.4",
    "tinyglobby": "^0.2.14",
    "title-case": "^4.3.2",
    "vite": "^7.3.0",
    "vite-plugin-browser-sync": "^6.0.0",
    "vite-plugin-twig-drupal": "^1.6.2"
  },
  "lint-staged": {
    "*.{js,twig}": [
      "eslint --fix"
    ],
    "*.{js,json,twig,html,css,less}": [
      "prettier --write"
    ]
  },
  "optionalDependencies": {
    "@esbuild/darwin-arm64": "^0.27.0"
  },
  "dependencies": {
    "open-props": "^1.7.16",
    "reasonable-colors": "^0.4.0"
  }
}
